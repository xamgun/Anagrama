<body>
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
      <h1>Lista de Anagramas</h1>

      <table>
        <thead>
          <tr>
            <th>Palavra 1</th>
            <th></th>
            <th>Palavra 2</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @words.each do |word| %>
            <tr>
              <td><%= word.word1 %></td>
              <td><%= word.word2 %></td>
              <td><%= word.anagrama %></td>
              <td><%= link_to 'Destroy' , word, method: :delete, data: { confirm: 'Deletar anagrama?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>
      <button type="button" class="btn btn-default"><%= link_to 'Nova verificação', new_word_path %></button>
      
       </div>
      </div>
    </div>
  </body>
